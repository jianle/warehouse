<!-- modal -->
<div class="modal fade" id="Modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">编辑</h4>
      </div>
      <div class="modal-body" style="padding-right: 35px;">

        <form class="form-horizontal" role="form" id="formModal" method="post">
          <input type="hidden" value="" name="gId" id="gId" />
          <div class="form-group">
            <label for="gName" class="col-sm-2 control-label" style="padding-left:4px" >商品名称</label>
            <div class="col-sm-7" style="padding-right:4px">
              <input readonly="readonly" type="text" class="form-control" name="gName" id="gName" />
            </div>
          </div>

          <input type="hidden" value="" name="sId" id="sId" />
          <div class="form-group">
            <label for="sName" class="col-sm-2 control-label" style="padding-left:4px" >供应商名称</label>
            <div class="col-sm-7" style="padding-right:4px">
              <input readonly="readonly" type="text" class="form-control" id="sName" />
            </div>
          </div>

          <div class="form-group">
            <label for="amount" class="col-sm-2 control-label" style="padding-left:4px">总库存数</label>
            <div class="col-sm-7" style="padding-right:4px">
              <input type="text" class="form-control" name="amount" id="amount" />
            </div>

          </div>

          <div class="form-group">
            <label for="remarks" class="col-sm-2 control-label" style="padding-left:4px">备注</label>
            <div class="col-sm-7" style="padding-right:4px">
              <input type="text" class="form-control" name="remarks" id="remarks" />
            </div>
          </div>

        </form>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary" onclick="modalCommit()">Save</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
