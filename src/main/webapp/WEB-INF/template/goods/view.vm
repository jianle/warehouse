<!-- goods添加和修改窗口 -->
<!-- modal -->
<div class="modal fade" id="goodsModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">新增</h4>
      </div>
      <!-- 添加账户信息 -->
      <div class="modal-body" style="padding-right: 0px;">

        <form class="form-horizontal" role="form" id="formGoodsAddUpdate" method="post">
          <input type="hidden" value="" name="gId" id="gId" />
          <div class="form-group">
            <label for="name" class="col-sm-2 control-label" style="padding-left:4px" >商品名称</label>
            <div class="col-sm-9">
              <input type="text" class="form-control" name="name" id="name" />
            </div>
          </div>

          <div class="row">
            <input type="hidden" value="" name="sId" id="sId" />
            <label for="sName" class="col-sm-2 control-label" style="padding-left:4px" >供应商名称</label>
            <div class="col-lg-9">
               <div class="input-group">
                   <input type="text" class="form-control" id="sName">
                   <div class="input-group-btn">
                       <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                           <span class="caret"></span>
                       </button>
                       <ul class="dropdown-menu dropdown-menu-right" role="menu">
                       </ul>
                   </div>
                   <!-- /btn-group -->
               </div>
           </div>
         </div>
         <br/>

          <div class="form-group">
            <label for="length" class="col-sm-2 control-label" >长度</label>
            <div class="col-sm-3">
              <input type="text" class="form-control" name="length" id="length" placeholder="单位 mm" />
            </div>

            <label for="width" class="col-sm-2 control-label" >宽度</label>
            <div class="col-sm-4">
              <input type="text" class="form-control" name="width" id="width" placeholder="单位 mm"/>
            </div>
          </div>

          <div class="form-group">
            <label for="height" class="col-sm-2 control-label" >高度</label>
            <div class="col-sm-3">
              <input type="text" class="form-control" name="height" id="height" placeholder="单位 mm" />
            </div>

            <label for="weight" class="col-sm-2 control-label" >重量</label>
            <div class="col-sm-4">
              <input type="text" class="form-control" name="weight" id="weight" placeholder="单位 g"/>
            </div>
          </div>

          <div class="form-group">
            <label for="amount" class="col-sm-2 control-label" >数量</label>
            <div class="col-sm-3">
              <input type="text" class="form-control" name="amount" id="amount" />
            </div>
            <label for="gIdSupplier" class="col-sm-2 control-label" >供应商编号</label>
            <div class="col-sm-4">
              <input type="text" class="form-control" name="gIdSupplier" id="gIdSupplier" />
            </div>
          </div>

          <div class="form-group">
            <label for="isDisabled" class="col-sm-2 control-label" style="padding-left:1px">是否有效</label>
            <div class="col-sm-3">
              <select class="form-control" name="isDisabled" id="isDisabled">
                <option value="F" >有效</option>
                <option value="T" >无效</option>
              </select>
            </div>
          </div>

        </form>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary" onclick="goodsCommit()">Save</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
