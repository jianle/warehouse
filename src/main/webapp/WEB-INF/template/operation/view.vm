#set($title='operation')
#set( $layout = "layout.vm" )
<script>
  var contextPath = '#springUrl('')';
</script>
<div class="">
    #parse("layout-title.vm")
    <br/>
    <div class="panel panel-default">
      <div class="panel-heading"><i class="glyphicon glyphicon-tag"></i> 操作日志明细</div>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>ID</th>
            <th>时间</th>
            <th>操作人</th>
            <th>操作</th>
            <th>操作对象</th>
            <th>状态</th>
            <th>对象ID</th>
            <th>对象名称</th>
            <th>备注</th>
          </tr>
        </thead>
        <tbody>
          #foreach( $operationLog in $operationLogs )
          <tr>
            <th>${operationLog.getId()}</th>
            <td>${operationLog.getLogTime()}</td>
            <td>${operationLog.getOperator()}</td>
            <td>${operationMap.get("${operationLog.getOperation()}")}</td>
            <td>${objectTypeMap.get("${operationLog.getObjectType()}")}</td>
            <td>
              <span class="mini-label #if(${operationLog.getStatus()}==1) mini-label-success #else mini-label-danger #end">
                #if(${operationLog.getStatus()}==1) 成功 #else 失败 #end
              </span>
            </td>
            <th>${operationLog.getObjectId()}</th>
            <td>#if(${operationLog.getObjectName()}) ${operationLog.getObjectName()} #end </td>
            <td>#if(${operationLog.getContent()}) ${operationLog.getContent()} #end</td>
          </tr>
          #end

        </tbody>
      </table>
    </div>

</div>
