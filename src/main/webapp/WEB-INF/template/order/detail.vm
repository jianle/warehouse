#set($title="订单信息")

<link rel="stylesheet" type="text/css" href="#springUrl('/static/jquery-easyui-1.4.2/themes/default/easyui.css')">
<link rel="stylesheet" type="text/css" href="#springUrl('/static/jquery-easyui-1.4.2/themes/icon.css')">
<script type="text/javascript" src="#springUrl('/static/jquery-easyui-1.4.2/jquery.easyui.min.js')"></script>
<script type="text/javascript" src="#springUrl('/static/js/order/detail.js')"></script>
<script src="#springUrl('/static/js/bootstrap-suggest.js')"></script>
<script>
  var contextPath = '#springUrl('')';
</script>
<br/>
<form class="form-horizontal" id="formoId" action="#springUrl('/order/detail/')" style="padding-top:10px;">
 <div class="row">
    <label for="oId" class="control-label" style="padding-left:0px;float:left" >订单编号</label>
    <div class="col-lg-2">
       <div class="input-group">
           <input type="text" class="form-control" id="oId" name="oId" value="${curoId}" />
           <div class="input-group-btn">
               <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                   <span class="caret"></span>
               </button>
               <ul class="dropdown-menu dropdown-menu-right" role="menu">
               </ul>
           </div>
           <!-- /btn-group -->
       </div>
   </div>
 </form>
 <br/>
 <hr/>
  <table id="dg" class="easyui-datagrid" title="订单明细" style="width:auto;height:auto"
			data-options="
        rownumbers:true,
				iconCls: 'icon-edit',
				singleSelect: true,
				toolbar: '#tb',
				url: contextPath+'/order/detail/get?o_id='+${curoId},
				method: 'get',
				onClickRow: onClickRow
			">
		<thead>
			<tr>
        <th data-options="field:'sId',width:240,
						formatter:function(value,row){
							return row.sName;
						},

						editor:{
							type:'combobox',
							options:{
                onChange:function(newValue, oldValue){
                  if(newValue==undefined) {
                    newValue='';
                  }
                  var comboboxData;
                  var url = contextPath + '/goods/getNameJson?sId=' + newValue;
                  var ed = $('#dg' ).datagrid( 'getEditor',{index:currentIndex,field: 'gId' });
                  $.ajax({
                       url:url,
                       dataType : 'json',
                       type : 'POST',
                       success: function (data){
                            comboboxData = eval(data.value);
                            $(ed.target).combobox( 'loadData' , comboboxData);
                       }
                    });
                },
								valueField:'sId',
								textField:'sName',
								method:'get',
								url:contextPath + '/supplier/getname',
								required:true
							},

						}">供应商名称</th>
				<th data-options="field:'gId',width:150,
						formatter:function(value,row){
							return row.gName;
						},
						editor:{
							type:'combobox',
							options:{
								valueField:'gId',
								textField:'gName',
								method:'get',
								url:contextPath + '/goods/getname',
								required:true
							}
						}">产品名称</th>
				<th data-options="field:'retailPrice',width:80,align:'right',editor:{type:'numberbox',options:{precision:2},required:true}">零售价</th>
				<th data-options="field:'unitPrice',width:80,align:'right',editor:{type:'numberbox',options:{precision:2},required:true}">单价</th>
        <th data-options="field:'amountNet',width:80,align:'right',editor:{type:'numberbox',options:{precision:2},required:true}">净额</th>
        <th data-options="field:'amount',width:80,align:'right',editor:{type:'numberbox',required:true}">数量</th>
        <th data-options="field:'amountAmt',width:80,align:'right',editor:{type:'numberbox',options:{precision:2},required:true}">金额</th>
				<th data-options="field:'code',width:92,editor:'textbox'">条码</th>
        <th data-options="field:'remarks',width:220,editor:'textbox'">备注</th>
				<th data-options="field:'status',width:60,align:'center',editor:{type:'checkbox',options:{on:'修改',off:'修改'}}">操作</th>
			</tr>
		</thead>
	</table>

	<div id="tb" style="height:auto">
		<a href="javascript:void(0)" class="easyui-linkbutton" data-options="iconCls:'icon-add',plain:true" onclick="append()">添加</a>
		<a href="javascript:void(0)" class="easyui-linkbutton" data-options="iconCls:'icon-remove',plain:true" onclick="removeit()">删除</a>
		<a href="javascript:void(0)" class="easyui-linkbutton" data-options="iconCls:'icon-save',plain:true" onclick="accept()">保存</a>
		<!-- <a href="javascript:void(0)" class="easyui-linkbutton" data-options="iconCls:'icon-undo',plain:true" onclick="reject()">撤销</a> -->
		<!-- <a href="javascript:void(0)" class="easyui-linkbutton" data-options="iconCls:'icon-search',plain:true" onclick="getChanges()">GetChanges</a> -->
	</div>

